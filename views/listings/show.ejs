<% layout('layouts/boilerplate') %>
<div class="row mt-3">
  <div class="col-8 offset-2">
    <h3>Listing Details :</h3>
  </div>
    
        <div class="card col-6 offset-3 show-card">
          <img src="<%= Listing.image %>" class="card-img-top show-img" alt="...">
          <div class="card-body">
            <p class="card-text"><b><%= Listing.title %></b>
            <br><%= Listing.description %><br>
             &#8377; <%= Listing.price.toLocaleString("en-IN") %><br>
            <%= Listing.location %><br>
            <%= Listing.country %></p>

          </div>
        </div>
      
    
    <br>
    <div class="btns">
      <a href="/listings/<%= Listing._id %>/edit" class="btn btn-dark col-1 offset-3 edit-btn">Edit</a>
    
   
      <form method="POST" action="/listings/<%=Listing._id%>?_method=DELETE" class="btn btn-dark  offset-4">
        <button>Delete</button>
      </form>
    </div>
    


</div>
